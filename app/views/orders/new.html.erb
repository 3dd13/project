<h2>Shopping Cart</h2>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Spend</th>
    </tr>
  </thead>

  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= number_to_currency(item.product.price) %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.product.price * item.quantity) %></td>
      </tr>
    <% end %>
      <tr>
        <td><b>Total Spend</b></td>
        <td></td>
        <td></td>
        <td class="total_spend"><b><%= number_to_currency(@total_spend) %></b></td>
      </tr> 
  </tbody>
</table>


<h2>Shipping Details</h2>
<%= render 'form' %>
	
<%= link_to 'Back', "/carts/#{session[:cart_id]}" %>
